<h1>World cities</h1>

<table class="table">

  <tr>
    <th>City name</th>
    <th>Country flag</th>
    <th>Time zone</th>
    <th>Population</th>
  </tr>

  <% WorldCity.order(:name).each do |row| %>
    <tr>
      <td><%= row.name %>, <%= row.country %></td>  
      <td><img src="/images/<%= row.flag_filename %>"</td>
      <td><%= row.timezone %></td>
      <td><%= row.pop_in_millions %>,000,000</td>
  </tr>
  <% end %>
  
</table>
