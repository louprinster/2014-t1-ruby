<%= error_messages_for @customer %>

<h1>Page of 3 of 4: Billing</h1>

<h2>Enter billing address</h2>

<%= check_box_tag "bill_address_same_as_ship", 
  "on",
  @customer.bill_address_same_as_ship %>
<%= label_tag "bill_address_same_as_ship",
  "Same as shipping address" %>

<p>
  <%= label_tag "bill_address1", "Address1" %>
  <br>
  <%= text_field_tag "bill_address1", @customer.bill_address1 %>
</p>

<p>
  <%= label_tag "bill_city", "City" %>
  <br>
  <%= text_field_tag "bill_city", @customer.bill_city %>
</p>

<p>
  <%= label_tag "bill_state", "State" %>
  <br>
  <%= select_tag "bill_state", options_from_collection_for_select(
    USState.order(:id), :abbreviation, :name, @customer.bill_state),
    prompt: "Choose a state..." %>
</p>

<p>
  <%= label_tag "bill_zip_code", "Zip Code" %>
  <br>
  <%= text_field_tag "bill_zip_code", @customer.bill_zip_code %>
</p>

<br>
<%= submit_tag "Go Back" %> or 
<%= submit_tag "Continue"%>